                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 17, 2024, 8:00 AM"
                        android:textSize="16sp"
                        android:textColor="@color/dark_green"
                        android:layout_toStartOf="@+id/next1"
